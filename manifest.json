{
    "manifest_version": 2,
    "name": "Budget Manager",
    "version": "1.0",
    "description": "An extension to manage budget.",
    "icons":{
        "128": "icons/icon128.png",
        "48": "icons/icon48.png",
        "16": "icons/icon16.png"
    },
    "browser_action":{
        "default_icon": "icons/icon16.png",
        "default_popup": "popup.html"
    },

    "options_page": "options.html",

    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },

    "permissions":[
        "storage",
        "notifications",
        "contextMenus"
    ]
}